<h1>Movies#index</h1>
<p>Find me in app/views/movies/index.html.erb</p>

<div class="container">
  <div class="row">
    <% @movies.each do |movie| %>
      <div class="col-md-3 mb-4">
        <%= link_to movie_path(movie), class: "text-decoration-none" do %>
          <div class="card h-100 overflow-hidden rounded-5 min-h-300">
            <div class="card-body p-0 h-100 d-flex justify-content-start align-items-center">
              <%= image_tag "https://image.tmdb.org/t/p/w500/#{movie.poster_url}", class: "w-100 h-100 object-fit-cover" %>
              <div class="position-absolute w-100 h-100 bg-dark opacity-50"></div>
              <p class="position-absolute text-white h2 p-3"><%= movie.title %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
